@import './variables.styl'

html,
body
  padding: 0
  margin: 0
  background-color: var(--black)
  font-family: "Red Hat Display",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif
  color: var(--white)

.container
  max-width: 1600px
  margin: auto

ul
  list-style: none
  margin: 0
  padding: 0

svg
  vertical-align: sub

*
  box-sizing: border-box

h1, h2, h3, h4, h5, h6
  margin: 0
  letter-spacing: 0.04em;

h4
  font-size: calc(20 * var(--space-base))
  line-height: calc(20 / 20)

a
  color: var(--white)

small
  font-size: calc(12 * var(--space-base))
  line-height: calc(20 / 12)
  letter-spacing: 0.04em;
  font-weight: 400

.font-weight-normal
  font-weight: normal !important

.text-center
  text-align: center !important

.text-green
  color: var(--green) !important

.text-grey
  color: var(--grey) !important

.text-red
  color: var(--red) !important

.text-grey-second
  color: var(--grey-second)

.w-100
  width: 100% !important

.v-toast__item
  &--success
    background-color: var(--green) !important
  &--error
    background-color: var(--red) !important

input[type='number'] {
  -moz-appearance:textfield;
}

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
}
